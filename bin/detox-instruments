#!/usr/bin/env ruby
#
# (C) TomTom International B.V. 2021

require 'pathname'

gemDir = Pathname.new(__FILE__).dirname.join("..")
appDir = gemDir.join("Detox Instruments.app")

if ARGV.size == 1 && ARGV.first == "--path"
  puts appDir.realpath
else
  success = system("open", "-a", appDir.to_s)
  raise $? if !success
end

